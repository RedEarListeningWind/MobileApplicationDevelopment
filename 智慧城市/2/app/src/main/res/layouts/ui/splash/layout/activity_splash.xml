<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.splash.SplashActivity">

    <ImageView
        android:id="@+id/image_view_ui_splash_logo"
        android:layout_width="@dimen/splash_logo_width_height"
        android:layout_height="@dimen/splash_logo_width_height"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/text_view_ui_splash_app_name"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.9"
        app:layout_constraintHorizontal_chainStyle="packed"
        android:baselineAlignBottom="true"
        android:layout_marginRight="@dimen/splash_logo_margin"
        android:src="@mipmap/logo"/>

    <TextView
        android:id="@+id/text_view_ui_splash_app_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="@id/image_view_ui_splash_logo"
        app:layout_constraintLeft_toRightOf="@id/image_view_ui_splash_logo"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/image_view_ui_splash_logo"
        android:textSize="26sp"
        android:text="@string/app_name"/>

</androidx.constraintlayout.widget.ConstraintLayout>